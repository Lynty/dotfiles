#!/bin/bash

#brew update
brew install tmux
brew install tldr
brew install tree
brew install the_silver_searcher
brew install stow
brew install --cask visual-studio-code rectangle
brew install z
brew install jq
brew install fd
brew install go
brew install kubernetes-cli
brew install kubectx
brew install python
brew install siege
brew install helm
brew install zsh
brew install ansible
brew install zsh-syntax-highlighting
brew install terraform-docs
brew tap superbrothers/zsh-kubectl-prompt
brew install zsh-kubectl-prompt
brew install zsh-autosuggestions
#git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
brew install ruby
gem install cargo # prerequisite for installing rubyfmt
brew install rubyfmt

curl https://dl.google.com/dl/cloudsdk/channels/rapid/downloads/google-cloud-cli-428.0.0-darwin-arm.tar.gz --output ~/Downloads/google-cloud-cli-428.0.0-darwin-arm.tar.gz
tar xf ~/Downloads/google-cloud-cli-428.0.0-darwin-arm.tar.gz --directory=gcloud-428.0.0-darwin-arm
./gcloud-428.0.0-darwin-arm/google-cloud-sdk/install.sh

sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended
